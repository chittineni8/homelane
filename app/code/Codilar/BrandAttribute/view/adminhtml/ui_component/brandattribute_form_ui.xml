<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">brandattribute_form_ui.brandattribute_form_data_source</item>
        </item>
        <item name="ajaxSave" xsi:type="boolean">false</item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Codilar\BrandAttribute\Block\BrandAttribute\BackButton"/>
            <button name="save" class="Codilar\BrandAttribute\Block\BrandAttribute\SaveButton"/>
        </buttons>
        <namespace>brandattribute_form_ui</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>brandattribute_form_ui.brandattribute_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="brandattribute_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="brandattribute/attribute/save"/>
        </settings>
        <aclResource>Codilar_PushNotification::pushnotify_order_template</aclResource>

        <dataProvider class="Codilar\BrandAttribute\Model\DataProvider\BrandAttribute\InfoProvider"
                      name="brandattribute_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings> <field name="attribute_name" sortOrder="10">
        <argument name="data" xsi:type="array">
            <item name="options" xsi:type="object">Codilar\BrandAttribute\Model\AttributeOption\AttributeValue</item>
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Attribute Name</item>
                <item name="component" xsi:type="string">Codilar_BrandAttribute/js/form/element/attribute-select
                </item>
                <item name="visible" xsi:type="boolean">true</item>
                <item name="dataType" xsi:type="string">text</item>
                <item name="formElement" xsi:type="string">select</item>
                <item name="mapper" xsi:type="object">Codilar\BrandAttribute\Model\AttributeOption\Mapper</item>
            </item>
        </argument>
    </field>
        <field name="brand_mapping_id" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Attribute Value</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                </item>
            </argument>
        </field>
        <field name="automat_value" sortOrder="28" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Automat Value</label>
                <visible>true</visible>
                <dataScope>automat_value</dataScope>
            </settings>
        </field>
        <field name="automat_id" sortOrder="30" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Automat ID</label>
                <visible>true</visible>
                <dataScope>automat_id</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
