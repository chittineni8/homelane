<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">query_form_ui.query_form_data_source</item>
        </item>
        <item name="ajaxSave" xsi:type="boolean">false</item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Codilar\Query\Block\Query\BackButton"/>
            <button name="save" class="Codilar\Query\Block\Query\SaveButton"/>
        </buttons>
        <namespace>query_form_ui</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>query_form_ui.query_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="query_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="query/info/save"/>
        </settings>
        <aclResource>Codilar_PushNotification::pushnotify_order_template</aclResource>

        <dataProvider class="Codilar\Query\Model\DataProvider\Query\InfoProvider" name="query_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="name" sortOrder="27" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">name</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <label translate="true">Name</label>
                <dataType>text</dataType>
                <visible>true</visible>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="phoneno" sortOrder="28" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">PhoneNo.</label>
                <visible>true</visible>
                <dataScope>phoneno</dataScope>
            </settings>
        </field>
        <field name="whatsapp" sortOrder="28" formElement="input">
            <settings>
<!--                <validation>-->
<!--                    <rule name="required-entry" xsi:type="boolean">true</rule>-->
<!--                </validation>-->
                <dataType>text</dataType>
                <label translate="true">Can we reach them on WhatsApp</label>
                <visible>true</visible>
                <dataScope>whatsapp</dataScope>
            </settings>
        </field>

          <field name="email" sortOrder="27" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-email" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">email</label>
                <visible>true</visible>
                <dataScope>email</dataScope>
            </settings>
        </field>
        <field name="pincode" sortOrder="30" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Pincode</label>
                <visible>true</visible>
                <dataScope>pincode</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
