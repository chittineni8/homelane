<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">codilar_priceversion_priceversion_form.priceversion_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Codilar\Priceversion\Block\Adminhtml\Priceversion\Edit\BackButton"/>
			<button name="delete" class="Codilar\Priceversion\Block\Adminhtml\Priceversion\Edit\DeleteButton"/>
			<button name="save" class="Codilar\Priceversion\Block\Adminhtml\Priceversion\Edit\SaveButton"/>
			<button name="save_and_continue" class="Codilar\Priceversion\Block\Adminhtml\Priceversion\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>codilar_priceversion_priceversion_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>codilar_priceversion_priceversion_form.priceversion_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="priceversion_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="priceversion_form_data_source" class="Codilar\Priceversion\Model\Priceversion\DataProvider">
			<settings>
				<requestFieldName>priceversion_id</requestFieldName>
				<primaryFieldName>priceversion_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="version_code" formElement="input" sortOrder="1">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Priceversion</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Version Code</label>
				<dataScope>version_code</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="version_label" formElement="input" sortOrder="2">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Priceversion</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Version Label</label>
				<dataScope>version_label</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="status" formElement="select" sortOrder="3">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Priceversion</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Status</label>
				<dataScope>status</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
			<formElements>
        <select>
            <settings>
                <options class="Magento\Config\Model\Config\Source\Enabledisable"/>
            </settings>
        </select>
    </formElements>
		</field>
		<field name="launch_date" formElement="date" sortOrder="5">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Priceversion</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Lauch date</label>
				<dataScope>launch_date</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="website" formElement="input" sortOrder="8">
			<argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">Codilar\Priceversion\Model\Priceversion\Website</item>
				<item name="config" xsi:type="array">
						<item name="dataType" xsi:type="string">text</item>
						<item name="label" xsi:type="string" translate="true">Website</item>
						<item name="formElement" xsi:type="string">select</item>
						<item name="source" xsi:type="string">Priceversion</item>
						<item name="dataScope" xsi:type="string">website</item>
						<item name="caption" xsi:type="string" translate="true">-- Please Select --</item>
				</item>
		</argument>
		</field>
		<field name="sub_cat" sortOrder="2" >
			<argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Catalog\Ui\Component\Product\Form\Categories\Options</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Category</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="component" xsi:type="string">Magento_Catalog/js/components/new-category</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">true</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="listens" xsi:type="array">
                        <item name="${ $.namespace }.${ $.namespace }:responseData" xsi:type="string">setParsed</item>
                    </item>
                </item>
            </argument>
		</field>
		<field name="copy_from_version_id" formElement="textarea" sortOrder="3">
			<argument name="data" xsi:type="array">
        <item name="options" xsi:type="object">Codilar\Priceversion\Model\Priceversion\Code</item>
        <item name="config" xsi:type="array">
            <item name="dataType" xsi:type="string">text</item>
            <item name="label" xsi:type="string" translate="true">Version Details to copy</item>
            <item name="formElement" xsi:type="string">select</item>
            <item name="source" xsi:type="string">Priceversion</item>
            <item name="dataScope" xsi:type="string">copy_from_version_id</item>
            <item name="caption" xsi:type="string" translate="true">-- Please Select --</item>
        </item>
    </argument>
		</field>
	</fieldset>
</form>
