<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">uomattribute_form_ui.uomattribute_form_data_source</item>
        </item>
        <item name="ajaxSave" xsi:type="boolean">false</item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Codilar\UomAttribute\Block\UomAttribute\BackButton"/>
            <button name="save" class="Codilar\UomAttribute\Block\UomAttribute\SaveButton"/>
        </buttons>
        <namespace>uomattribute_form_ui</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>uomattribute_form_ui.uomattribute_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="uomattribute_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="uomattribute/attribute/save"/>
        </settings>
        <aclResource>Codilar_PushNotification::pushnotify_order_template</aclResource>

        <dataProvider class="Codilar\UomAttribute\Model\DataProvider\UomAttribute\InfoProvider" name="uomattribute_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="attribute_name" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Codilar\UomAttribute\Model\AttributeOption\Attribute</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Attribute Name</item>
                    <item name="component" xsi:type="string">Codilar_UomAttribute/js/form/element/attribute-select
                    </item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="mapper" xsi:type="object">\Codilar\UomAttribute\Model\AttributeOption\Mapper</item>
                </item>
            </argument>
        </field>
        <field name="uom_id" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Attribute Value</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                </item>
            </argument>
        </field>
        <field name="sap_id" sortOrder="28" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Codilar\UomAttribute\Model\Source\SapUom</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Sap UOM  ID</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">UomAttribute</item>
                    <item name="dataScope" xsi:type="string">sap_id</item>
                    <item name="caption" xsi:type="string" translate="true">-- Please Select --</item>
                </item>
            </argument>
        </field>
        <field name="automat_id" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Codilar\UomAttribute\Model\Source\AutomatUom</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Automat UOM ID</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">UomAttribute</item>
                    <item name="dataScope" xsi:type="string">automat_id</item>
                    <item name="caption" xsi:type="string" translate="true">-- Please Select --</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
