<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="attribute_tab" translate="label" sortOrder="110">
            <label>UOM BRAND Attribute Mapping</label>
        </tab>
        <section id="attribute_section" translate="label" type="text" sortOrder="100" showInDefault="1"
                 showInWebsite="1" showInStore="1">
            <label>Uom and Brand Attribute Mapping</label>
            <tab>attribute_tab</tab>
            <resource>Codilar_UomAttribute::config_uomattribute</resource>
            <group id="uomattribute" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>UOM and BRAND Attribute Mapping</label>
                <field id="uomattributevalue" translate="label" type="select" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Select UOM Attribute Value</label>
                    <source_model>\Codilar\UomAttribute\Model\AttributeOption\Mapper</source_model>
                </field>
                <field id="brandattributevalue" translate="label" type="select" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Select BRAND Attribute Value</label>
                    <source_model>\Codilar\BrandAttribute\Model\AttributeOption\Mapper</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
