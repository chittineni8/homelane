<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="JLNarvaez_WhatsappShare::css/whatsapp.css"/>
    </head>
    <body>
        <container name="product.info.social.second" htmlTag="div" htmlClass="product-social-links-new">
            <block class="Magento\Catalog\Block\Product\View" name="product.info.mailto" template="Magento_Catalog::product/view/mailto.phtml"/>
            <block name="product.whatsapp.share" template="JLNarvaez_WhatsappShare::button/share.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">JLNarvaez\WhatsappShare\ViewModel\Whatsapp</argument>
                </arguments>
            </block>
        </container>
        <move element="product.info.social.second" destination="product.info.main" after="product.info.social"  />
        <move element="product.info.mailto" destination="product.info.social.second" before="-"/>
    </body>
</page>
