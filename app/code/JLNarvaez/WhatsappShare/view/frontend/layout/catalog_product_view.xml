<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="JLNarvaez_WhatsappShare::css/whatsapp.css"/>
    </head>
    <body>
        <referenceContainer name="product.info.social">
            <block name="product.whatsapp.share" template="JLNarvaez_WhatsappShare::button/share.phtml" after="product.info.mailto">
                <arguments>
                    <argument name="view_model" xsi:type="object">JLNarvaez\WhatsappShare\ViewModel\Whatsapp</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
