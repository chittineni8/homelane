<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
    	<move element="page.main.title" destination="product.info.main" before="-"  />
    	<move element="product.info.price" destination="product.info.main" after="product.info"  />
        <move element="catalog.product.related" destination="content" after="-"/>
		<referenceBlock name="product.info.addtocart" remove="true"/>
    	<referenceBlock name="product.info.options.wrapper.bottom" remove="true" />
    	<referenceBlock name="product.info.stock.sku" remove="true" />
    	<referenceBlock name="product.info.review" remove="true" />
        <!-- <referenceBlock name="product.info.overview" remove="true" /> -->
        <referenceContainer name="product.info.main">
            <block class="Magento\Framework\View\Element\Template" name="product.group" template="Magento_Catalog::product/view/product_group.phtml" before="product.info.price">
                <arguments>
                    <argument name="customAttributeVieModel" xsi:type="object">Codilar\Catalog\ViewModel\CustomAttributes</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceBlock name="page.main.title">
            <block class="Magento\Framework\View\Element\Template" name="social_share_icons"  template="Magento_Catalog::socialshare.phtml" />
         </referenceBlock>
         <referenceContainer name="product.info.price">
            <block class="Magento\Framework\View\Element\Template" name="all_taxes"  template="Magento_Catalog::alltexes.phtml"/>
             <referenceBlock name="render.product.prices">
                 <block class="Magento\Framework\View\Element\Template" name="discount" template="Magento_Catalog::product/price/final_price.phtml" />
             </referenceBlock>
         </referenceContainer>
         <referenceContainer name="product.info.social.second" remove="true" />
    </body>
</page>
