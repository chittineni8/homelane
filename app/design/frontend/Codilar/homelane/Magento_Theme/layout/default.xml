<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="footer">
                <block before="-" class="Magento\Cms\Block\Block" name="homelane-footer-block">
                    <arguments>
                        <argument name="block_id" xsi:type="string">homelane-footer-block</argument>
                    </arguments>
                </block>
                <!-- <block class="Magento\Customer\Block\Form\Login" name="custom_customer_form_login" template="Magento_Customer::form/login.phtml" after="-"/> -->
                <block class="Magento\Framework\View\Element\Template" name="otp-popup" template="PHPCuong_CustomerAccount::otp-popup.phtml" after="-" />
        </referenceContainer>
        <referenceContainer name="header-wrapper">
              <block class="Magento\Framework\View\Element\Html\Links" name="header.links" after="-">
                  <arguments>
                    <argument name="css_class" xsi:type="string">header links bottom</argument>
                  </arguments>
              </block>
        </referenceContainer>

        <move element="header.links" destination="header-wrapper" after="-" />
        <move element="top.links" destination="header-wrapper" after="-" />
        <move element="minicart" destination="header-wrapper" before="header.links" />
        <move element="navigation.sections" destination="header-wrapper" after="logo" />
        
        <!-- remove footer content -->
        <referenceBlock name="footer_links" remove="true" />
        <referenceBlock name="report.bugs" remove="true" />
        <referenceBlock name="form.subscribe" remove="true" />
        <!-- remove store switcher ofheader -->
        <referenceBlock name="header.panel.wrapper" remove="true" />
        <referenceBlock name="store.settings.language" remove="true"/>
        <!-- remove advance search link of header -->
        <referenceBlock name="advanced-search-link" remove="true"/>
        <!-- <referenceBlock name="minicart" remove="true"/> -->

        <!-- remove compare link -->
        <referenceBlock name="catalog.compare.link" remove="true" />
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="catalogsearch.product.addto.compare" remove="true"/>
        <referenceBlock name="category.product.addto.compare" remove="true"/>
        <referenceBlock name="crosssell.product.addto.compare" remove="true" />
        <referenceBlock name="related.product.addto.compare" remove="true" />
        <referenceBlock name="upsell.product.addto.compare" remove="true" />
        <referenceBlock name="view.addto.compare" remove="true" />
    </body>
</page>
